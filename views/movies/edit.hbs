<h2>Edit movie information</h2>

<section class="form">
  <form action="/movies/{{movie._id}}" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" placeholder="Movie Title" value="{{movie.title}}"/>
    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre" placeholder="genre" value="{{movie.genre}}"/>
    <label for="plot">Plot</label>
    <input type="text" name="plot" id="plot" placeholder="Plot" value="{{movie.plot}}"/>
    <button>Edit Movie</button>
  </form>
</section>