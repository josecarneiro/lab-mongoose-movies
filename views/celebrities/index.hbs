<h1>Celebrities List</h1>

{{#each celebrities}}
<h2>
<a href="/celebrities/{{ _id}}">{{name}}</a>
</h2>
<div class="buttons">
<form method="GET" action="/celebrities/{{ _id}}/edit">
  <button>Edit</button>
</form>
<form method="POST" action="/celebrities/{{ _id}}/delete">
  <button>Delete</button>
</form>
</div>
<br>
{{/each}}

<a href="/celebrities/create">Add a new Celebrity</a>