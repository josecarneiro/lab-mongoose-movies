{{#with thisMovie}}


<section class="form">
<form action="/movies/{{_id}}" method="POST">

<div><label for="title">Title:</label>
<input type="text" name="title" id="title" value="{{ title }}"></div>
<div><label for="genre">Genre:</label>
<input type="text" name="genre" id="genre" value="{{ genre }}"></div>
<div><label for="plot">Plot:</label>
<input type="text" name="plot" id="plot" value="{{ plot }}"></div>

<button>Save</button>

</form>
</section>
{{/with}}