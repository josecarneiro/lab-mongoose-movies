<h2>This is the celebrities index</h2>

{{#each celebrities}}
<a href="/celebrities/{{id}}">
<h3>{{this.name}}</h3>
</a>
<form action="/celebrities/{{id}}/delete" method="POST">
<button>Delete Celebrity</button>
</form>
<form action="/celebrities/{{id}}/edit" method="GET">
<button>Edit Celebrity</button>
</form>
{{/each}}

