<h2>Edit Celebrity</h2>
<form action="/celebrities/create" method="POST">
  <label for="name">Name</label>
  <input type="text" name="name" id="name" placeholder="name" value ="{{ celebrity.name }}" >
  <label for="occupation">Occupation</label>
  <input type="text" name="occupation" id="occupation" placeholder="occupation" value="{{ celebrity.occupation }}">
  <label for="phraseCatch">Catch Phrase</label>
  <input type="text" name="phraseCatch" id="phraseCatch" placeholder= "Catch Phrase" value ="{{ celebrity.catchPhrase }}" >
  <button>Submit</button>
</form>