<h1>Movies List</h1>

{{#each movies}}
<h2>
<a href="/movies/{{ _id}}">{{title}}</a>
</h2>
<div class="buttons">
<form method="GET" action="/movies/{{ _id}}/edit">
  <button>Edit</button>
</form>
<form method="POST" action="/movies/{{ _id}}/delete">
  <button>Delete</button>
</form>
</div>
<br>
{{/each}}

<p><a href="/movies/create">Add a new Movie</a></p>