<h2>Edit Celebrity</h2>
<form action="/celebrities/{{ celebrity._id }}/edit" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" placeholder="{{ celebrity.name }}"/>
    <label for="occu">Occupation</label>
    <input type="text" name="occu" id="occu" placeholder="{{ celebrity.occupation }}"/>
    <label for="phrase">Catch Phrase</label>
    <input type="text" name="phrase" id="phrase" placeholder="{{ celebrity.catchPhrase }}"/>
    <button>Save Celebrity</button>
</form>